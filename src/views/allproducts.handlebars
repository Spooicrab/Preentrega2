<style>
  #productos { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; }
  #productos>div { background-color: #f2f2f2; padding: 20px; border-radius: 5px;
  text-align: center; } .pagination-link { padding: 10px 20px; background-color:
  #007bff; color: #fff; border: none; cursor: pointer; margin-top: 10px;
  display: inline-block; text-decoration: none; border-radius: 5px; }
  .pagination-link:hover { background-color: #0056b3; }
</style>

<div id="productos">
  {{#each Productos.docs}}
    <div>
      <h3>{{title}}</h3>
      <h2>{{_id}}</h2>
      <p>${{price}}</p>
      <p>stock:{{stock}}</p>
      <button class="AddToCart" data-product-id="{{_id}}">A침adir al Carrito</button>
    </div>
  {{/each}}
</div>
<div>
  {{#if Productos.hasPrevPage}}
    <a
      href="/views/products?page={{Productos.prevPage}}"
      class="pagination-link"
    >P치gina anterior</a>
  {{/if}}
  {{#if Productos.hasNextPage}}
    <a
      href="/views/products?page={{Productos.nextPage}}"
      class="pagination-link"
    >P치gina siguiente</a>
  {{/if}}
</div>
<h2 style="color: #333; font-family: Arial, sans-serif; font-size: 24px;">CREAR
  PRODUCTO</h2>
<form action="/views/products" method="post" style="margin-top: 20px;">
  <label
    for="title"
    style="display: block; margin-bottom: 10px;"
  >Nombre:</label>
  <input
    type="text"
    name="title"
    id="title"
    style="padding: 5px; width: 200px;"
  />

  <label
    for="price"
    style="display: block; margin-bottom: 10px;"
  >Precio:</label>
  <input
    type="number"
    name="price"
    id="price"
    style="padding: 5px; width: 200px;"
  />

  <label for="code" style="display: block; margin-bottom: 10px;">Code</label>
  <input
    type="number"
    name="code"
    id="code"
    style="padding: 5px; width: 200px;"
  />

  <label for="stock" style="display: block; margin-bottom: 10px;">Stock</label>
  <input
    type="number"
    name="stock"
    id="stock"
    style="padding: 5px; width: 200px;"
  />

  <label
    for="description"
    style="display: block; margin-bottom: 10px;"
  >Descripci칩n:</label>
  <input
    type="text"
    name="description"
    id="description"
    style="padding: 5px; width: 200px;"
  />
  <input
    type="submit"
    value="CREAR"
    style="padding: 10px 20px; background-color: #007bff; color: #fff; border: none; cursor: pointer; margin-top: 10px;"
  />
</form>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/allproducts.js"></script>